<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBG">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:text="Start Here"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_title" />

        <android.support.v7.widget.CardView
            android:id="@+id/current_cv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/margin_normal"
            app:cardCornerRadius="@dimen/margin_normal"
            app:cardElevation="@dimen/margin_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_main_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/imagebg"
                    android:scaleType="fitXY"
                    android:src="@mipmap/rv_hor5" />

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_add_white_24dp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/margin_medium"
                    android:text="5 mins"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btnbg"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_play_arrow_white_24dp"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_medium_x"
                    android:paddingRight="@dimen/margin_medium_x"
                    android:paddingTop="@dimen/margin_normal"
                    android:text="Start"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_start_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_start"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="center_horizontal"
                    android:text="Simple Habit Starter"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_title"
                    android:textStyle="bold" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>